<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--TextView for the title-->
        <TextView
            android:id="@+id/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bus_schedule"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- EditText to input the date -->
        <EditText
            android:id="@+id/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_date_dd_mm_yyyy"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:layout_marginBottom="16dp"
            tools:ignore="DuplicateIds" />

        <!-- Button to add time slot -->
        <Button
            android:id="@+id/btnAddTimeSlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_route"
            android:layout_marginBottom="16dp"/>

        <!-- LinearLayout to hold the list of time slots -->
        <LinearLayout
            android:id="@+id/llTimeSlots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <!-- Button to save the time sheet -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_bus_times"
            android:layout_marginTop="16dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>